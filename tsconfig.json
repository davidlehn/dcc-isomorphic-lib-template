{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "checkJs": false,
    "esModuleInterop": true,
    "lib": ["es2022"],
    "module": "es2022",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": false,
    "strict": true,
    "target": "es2022"
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src"
  ],
  "exclude": ["test", "node_modules", "dist"]
}
